{% extends 'site.html.twig' %}

{% block body %}
    {% include 'menus/site_empty.html.twig' %}
    <div class="container pt-5 login-page">
        <div class="row row-login">
            <div class="col-md-6 p-4">
                <form action="" method="post" class="text-left">
                    {# {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %} #}
                    {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="row mt-3">
                            <div class="col">
                               <div class="alert alert-{{ label }} alert-dismissible fade show">
                                    {{ message }}
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                            </div>
                            </div>
                        </div>
                    {% endfor %}
                    {% endfor %}   
                    <h1 class="h3 mb-4 mt-4 m-2">Professor</h1>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                           class="form-control form-default mt-2" placeholder="E-mail" required autofocus>
                    <input type="password" name="password" id="inputPassword" class="form-control form-default mt-4"
                           placeholder="Senha" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <div class="d-flex justify-content-between flex-wrap mt-4" style="margin: auto">
                        <button class="btn btn-lg btn-dark" style="height: 50px;" type="submit">
                            <i class="fas fa-check"></i> Entrar
                        </button>
                        <div style="margin: auto">
                            <a href="{{ path('app_forgot_password_request') }}" class="text-dark font-weight-bold" style="padding-right:3px;"> Esqueceu a
                                senha?</a>|
                            <a href="{{ path('site_criar_quiz_cadastrar', {'messageType': 'Cadastro', 'type': 'CRIAR_CONTA'})}}" class="text-dark font-weight-bold" style="padding-left:3px;"> Criar minha conta
                                gr√°tis</a>
                        </div>
                    </div>
                </form>
                <hr/>
                
                    {% if error %}
                        <br/>
                        <div class=" alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
