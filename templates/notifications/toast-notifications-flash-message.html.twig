<div 
  id="toast-notifications-flesh-message" 
  aria-live="polite" 
  aria-atomic="true" 
  style="position: fixed; top: 50px; right: 10px; z-index: 10;"
>
  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="1000000">
        <div class="toast-header bg-{{ label }}">
          <small class="text-muted mr-auto">1 seconds ago</small>
          <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="toast-body">
          {{ message }}
        </div>
      </div>
    {% endfor %}
  {% endfor %} 
</div>