        </div>
        {% endfor %}
        
        {{ include('app/minhaConta/nav.html.twig',{page: 'email'}) }}

        <div class="pt-4">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(form.remetente) }}
                    </div>
                </div> 
                <div class="row">
                    <div class="col">
                        {{ form_row(form.endereco) }}
                    </div>
                </div> 
                {{ form_row(form.salvar) }}
            {{ form_end(form) }}
        </div>
    </div>
 {% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}