<!-- Modal -->
<div class="modal fade" tabindex="-1" data-backdrop="static" id="modalEviarEmailQuiz{{quiz.quiz.id}}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    Fa√ßa uma lista e envie por email
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <select id="emails-{{quiz.quiz.id}}" class="form-control emails" style="width: 100%;"></select>
